doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', data-bypass=true, href='/layouts/core.min.css?#{cacheBreaker}')
    block neck
  body
    div.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(data-bypass=true, href='/')
            img.navbar-logo(src='/media/logo-symbol-64x64.png')
            span.navbar-brand-label #{projectName}
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav
            li: a(data-bypass=true, href='/') Home
            li: a(data-bypass=true, href='/about/') About
            li: a(data-bypass=true, href='/signup/') Sign Up
            li: a(data-bypass=true, href='/contact/') Contact
          ul.nav.navbar-nav.navbar-right
            if user && user.username
              li: a(data-bypass=true, href='#{user.defaultReturnUrl}')
                i.fa.fa-user
                |  #{user.username}
            else
              li: a(data-bypass=true, href='/login/')
                i.fa.fa-user
                |  Sign In

    div.page
      div.container
        block body

    div.footer
      div.container
        span.copyright.pull-right
          |&#169; #{copyrightYear} #{copyrightName}
        ul.links
          li: a(data-bypass=true, href='/') Home
          li: a(data-bypass=true, href='/contact/') Contact
        div.clearfix

    div.ajax-spinner
      img(src='/media/ajax-pulse.gif')

    //if lte IE 9
      script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/vendor/requirejs/require.js?#{cacheBreaker}', data-main='/app/app-require.js')
    script(src='/layouts/core.min.js?#{cacheBreaker}')

    block feet
